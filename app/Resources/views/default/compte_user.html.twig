{% extends 'base.html.twig' %}

{% block body %}

    {% if app.user and is_granted("ROLE_USER") %}

        <br/>

        <h2 id="titre_compte">Voici vos informations personnelles : </h2>

        <div id="info_perso">
            <p><span class="label_info">Nom :</span> {{ app.user.nom }}</p>
            <p><span class="label_info">Prenom :</span> {{ app.user.prenom }}</p>
            <p><span class="label_info">Email :</span> {{ app.user.email }}</p>
            <p><span class="label_info">Mot de passe :</span> {{ app.user.password }}</p>
            <p><span class="label_info">Téléphone :</span> {{ app.user.telephone }}</p>
            <p><span class="label_info">Date d'inscription :</span> {{ app.user.dateInscription|date('d-m-Y') }}</p>
            <!--<p><span class="label_info">Adresse :</span> {#{ app.user.adresse.nom.cp.ville }#}</p>-->
            <p><span class="label_info">complément d'adresse :</span> {{ app.adresse.compAdresse }}</p>
            <p><span class="label_info">Code Postal :</span> {{ app.adresse.cp }}</p>
            <p><span class="label_info">Ville :</span> {{ app.adresse.ville }}</p>
        </div>

{% endif %}

{% endblock %}